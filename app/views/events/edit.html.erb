<%# content_for sets the page title %>
<% content_for :title, "Editing Event" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Editing Event</h1>

      <%= render "form", event: @event %>

      <div class="mt-4">
        <%= link_to event_path(@event), class: "btn btn-primary me-2" do %>
          <i class="bi bi-eye"></i> Show Event
        <% end %>

        <%= link_to events_path, class: "btn btn-secondary" do %>
          <i class="bi bi-arrow-left"></i> Back to Events
        <% end %>
      </div>
    </div>
  </div>
</div>