<!-- app/views/events/index.html.erb -->
<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% content_for :title, "Events" %>

<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1 class="mb-4">Events</h1>

      <%= link_to new_event_path, class: "btn btn-primary mb-4" do %>
        <i class="bi bi-plus-circle"></i> New Event
      <% end %>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="events">
        <% @events.each do |event| %>
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <%= render event %>
                <%= link_to "Show details", event, class: "btn btn-outline-primary mt-3" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>