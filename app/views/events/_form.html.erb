<%= simple_form_for @event, html: { class: 'form-horizontal' } do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.input :name, wrapper_html: { class: 'mb-3' },
                         input_html: { class: 'form-control' },
                         label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group mb-3">
    <%= form.input :description, wrapper_html: { class: 'mb-3' },
                                input_html: { class: 'form-control' },
                                label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group mb-3">
    <%= form.input :started_at, wrapper_html: { class: 'mb-3' },
                               input_html: { class: 'form-control' },
                               label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group mb-3">
    <%= form.input :finished_at, wrapper_html: { class: 'mb-3' },
                                input_html: { class: 'form-control' },
                                label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group mb-3">
    <%= form.input :done, wrapper_html: { class: 'mb-3' },
                         input_html: { class: 'form-check-input' },
                         label_html: { class: 'form-check-label' } %>
  </div>

  <div class="form-group">
    <%= form.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
